<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/b_savePerson"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="664dp"
        android:text="Add"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

    <EditText
        android:id="@+id/bird_et_name"
        android:layout_width="417dp"
        android:layout_height="50dp"
        android:hint="Insert bird name"
        tools:layout_editor_absoluteX="-6dp"
        tools:layout_editor_absoluteY="275dp"
        android:layout_marginTop="0dp"/>

    <EditText
        android:id="@+id/bird_et_location"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:hint="Insert bird location"
        tools:layout_editor_absoluteX="-4dp"
        tools:layout_editor_absoluteY="547dp"
        app:layout_constraintTop_toBottomOf="@id/bird_et_name"/>

    <EditText
        android:id="@+id/bird_et_color"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:hint="Insert bird color"
        tools:layout_editor_absoluteX="20dp"
        tools:layout_editor_absoluteY="77dp"
        android:layout_marginTop="150dp"
        app:layout_constraintTop_toBottomOf="@id/bird_et_location"/>

</androidx.constraintlayout.widget.ConstraintLayout>